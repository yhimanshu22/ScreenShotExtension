{
  "manifest_version": 3,
  "name": "Quick Copy Screenshot",
  "version": "1.0",
  "description": "Select an area on the page to capture and copy it to your clipboard.",
  "permissions": ["activeTab", "scripting", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "offscreen": {
    "reasons": ["CLIPBOARD"],
    "justification": "Required to write image data to the clipboard.",
    "path": "offscreen.html"
  }
}
