{
    "manifest_version": 3,
    "name": "Screenshot Taker",
    "version": "1.0",
    "description": "Capture screenshots using a browser extension",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}